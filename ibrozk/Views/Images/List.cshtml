@{
Layout=null;
}

@model List<ibrozk.Entity.Post>
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css">
    <div class="container mt-5">
        <div class="row">
            <div class="col-12">
                <h2 class="text-center mb-4">Fotoğraf Listesi</h2>
                <a href="/images/" class="btn btn-primary mb-3">Ana Sayfa</a>
                <a href="/images/create" class="btn btn-primary mb-3">Yeni Fotoğraf Yükle</a>

                <table class="table table-bordered mt-3">
                    <thead>
                        <tr>
                            <th style="width: 200px;" class="text-center">Fotoğraf</th>
                            <th class="text-center"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td class="text-center">
                                <img src="/photos/@item.Urlname" class="img-fluid" alt="Photo">
                            </td>
                            <td class="text-center align-middle">
                                <div class="d-inline-block">
                                    <a asp-action="Delete" asp-route-id="@item.PostId"
                                        class="btn btn-sm btn-danger mx-1">- - - Sil - - - </a>
                                </div>
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>