@{
Layout= null;
}

@model LoginViewModel
<link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css">

<nav class="navbar navbar-expand-lg bg-white shadow-sm">
    <div class="container">
        <a href="/images" class="navbar-brand">
            <i class="bi bi-code"></i> İbrahim Özkadir
        </a>

        <ul class="navbar-nav ms-auto">
            @if(User.Identity!.IsAuthenticated)
            {
            <li class="nav-item">
                <a href="#" class="nav-link">@User.Identity.Name</a>
            </li>
            <li class="nav-item">
                <a href="/users/logout" class="nav-link">Çıkış</a>
            </li>
            }
            else
            {
            <li class="nav-item">
                <a href="/users/login" class="nav-link">Giriş</a>
            </li>
            }

        </ul>

    </div>
</nav>


<div class="container d-flex justify-content-center align-items-center vh-100">
    <div class="row">
        <div class="col-md-12 text-center">
            <a href="/Images/Create" class="btn btn-dark btn-lg mb-3">Yeni Fotoğraf Yükle</a>
        </div>
        <div class="col-md-12 text-center">
            <a href="/Images/List" class="btn btn-dark btn-lg mb-3">Yüklenen Fotoğrafları Listele</a>
        </div>
        <div class="col-md-12 text-center">
            <a href="/Images/CreatebyList" class="btn btn-dark btn-lg mb-3">Toplu Fotoğraf Yükle</a>
        </div>
        <div class="col-md-12 text-center">
            <a href="/Tags" class="btn btn-dark btn-lg mb-3">Kategori Sil</a>
        </div>
    </div>
</div>